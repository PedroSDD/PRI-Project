import codecs


def file_cleaner(file):
    content_all_files = []
    content = codecs.open(file, encoding='utf-8', errors='replace')
    for line in content.readlines():
        line = line.split()
        for word in line:
            if not word.isdigit():
                content_all_files.append(word)
    return content_all_files

def find_ngrams(input_list, n):
    return zip(*[input_list[i:] for i in range(n)])

def create_ngram_dictionary(n_gram_generated):
    dictionary = {}
    for n_gram in n_gram_generated:
        if n_gram not in dictionary:
            dictionary[n_gram] = 0
        else:
            dictionary[n_gram] += 1

    print dictionary


def initializer():
    input_list = file_cleaner('testeex4')
    n_gram_generated = find_ngrams(input_list, 2)
    create_ngram_dictionary(n_gram_generated)


initializer()